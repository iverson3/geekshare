                    <!-- 分页按钮 -->
                    <div class="pagination" style="padding-left: 36px;">
                        <ul>
                            <li class="next">
                                <span style=" padding-left: 50px;">总页数: {{ count }}</span>
                            </li>
                            {% if (nowpage - 1) == 0 %}
                            {% else %}
                            <li class="next">
                                <a rel="next" data-remote="true" href="{{ path('home_index_index_', {'lang': nowlang, 'page': nowpage - 1}) }}">上一页</a>
                            </li>
                            {% endif %}
                            {% if nowpage == count %}
                            {% else %}
                            <li class="next">
                                <a rel="next" data-remote="true" href="{{ path('home_index_index_', {'lang': nowlang, 'page': nowpage + 1}) }}">下一页</a>
                            </li>
                            {% endif %}
                            <li>
                                <form action="" method="get" onsubmit="jumpsubmit(); return false;">
                                    <input type="hidden" id="nowlang" value="{{ nowlang }}">
                                    <input type="text" style="width: 40px; margin-top: 10px;" id="page" value="{{ nowpage }}">
                                    <input type="submit" class="btn btn-default" value="跳转">
                                </form>
                            </li>
                        </ul>
                    </div>                    
                    
                    <script type="text/javascript">
                        var count = {{ count }};
                        // 拦截提交事件
                        function jumpsubmit(){
                            var nowlang = document.getElementById('nowlang').value;
                            var page    = document.getElementById('page').value;
                            if ((page > count) || (page < 1) || (isNaN(page))) {
                                alert("输入有误哦");
                                return false;
                            }
                            var url = "{{ path('home_index_index_', {'lang': nowlang, 'page': nowpage}) }}";
                            var arr = url.split("/");
                            if (arr.length === 2) {
                                url = url + "/" + page;
                            } else {
                                url = "/" + arr[1] + "/" + page;
                            }
                            window.location.href = url;
                            return false;
                        }
                    </script>

